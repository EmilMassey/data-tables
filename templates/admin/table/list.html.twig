{% extends 'admin/base.html.twig' %}

{% block content %}
    {% if tables is empty %}
        <div class="alert alert-warning">
            Brak tabel. <a href="{{ url('admin_table_create') }}">Dodaj tabelę.</a>
        </div>
    {% else %}
        <table class="table table-striped">
            {% for table in tables %}
                <tr>
                    <td>
                        <a href="{{ url('table_show', {'id': table.id}) }}">
                            {{ table.name }} <small>({{ table.id }})</small>
                            <span class="badge badge-info">{{ table.users|length }} użytkowników</span>
                        </a>
                    </td>
                    <td class="text-right">
                        <a href="{{ url('admin_table_edit', {'id': table.id}) }}" class="btn btn-sm btn-outline-primary">
                            Edytuj
                        </a>
                        <form action="{{ url('admin_table_delete', {'id': table.id}) }}" method="POST" class="d-inline">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('table.delete') }}"/>
                            <button type="submit" class="btn btn-sm btn-danger">
                                Usuń
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>

        <a href="{{ url('admin_table_create') }}">Dodaj tabelę</a>
    {% endif %}
{% endblock %}

